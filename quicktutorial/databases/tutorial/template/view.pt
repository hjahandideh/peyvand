<script>
    $("#frm-submitted").click(function() {
        console.log("hi")
        var m=$("#mpayam").val()
        $.post( "/url",{ 'mpayam': m,'frm-submitted':1}, function(data) {
            var x = "<table>";
            for(var i in  data['page']){

                x += "<tr>";

                x += "<td>"+ data['page'][i]['mpayam'] + "</td>";
                x += "<td>"+ data['page'][i]['ersal'] + "</td>";
                x += "</tr>";

            }
            x += "</table>";
            $("#result").html(x);
        })
          .fail(function() {
            alert( "error" );
